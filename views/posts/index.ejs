<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Creepster&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/app.css" />
    <title>Monstr - News Feed</title>
  </head>
  <body>
    <h1>Monstr - News Feed</h1>
    <div class="actions">
      <a class="buttonize" href="/auth/signup">Sign Up</a>
      <a class="buttonize" href="/auth/login">Log In</a>
      <a class="buttonize" href="/posts/new">New Post</a>
      <a class="buttonize" href="/users">See All Users</a>
    </div>
    <br /><br /><br />
    <ul class="posts">
      <% for( let i = 0; i < posts.length; i++ ) { %>
      <li>
        <a href="/posts/<%= posts[i].id %>/"
          >View Post</a>
          <h2><%= posts[i].textContent %></h2>
          <img src="<%= posts[i].picture %>">
        <br /><br />
      </li>
      <% } %>
    </ul>
    <br />
  </body>
</html>
